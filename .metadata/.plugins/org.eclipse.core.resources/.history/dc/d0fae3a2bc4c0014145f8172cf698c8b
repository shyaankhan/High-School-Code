		String product;
		product = JOptionPane.showInputDialog (null, "Please enter description of product");
		
		String year;
		year = JOptionPane.showInputDialog (null, "Please enter year of product");
		
		String cost;
		cost = JOptionPane.showInputDialog (null, "Please enter cost of product");
		
		String estimatedlife;
		estimatedlife = JOptionPane.showInputDialog(null, "Please enter years to be depreciated (estimated life)");
		
		JOptionPane.showMessageDialog(null, "Description: "+product+"\nYear of purchase: "+year+"\nCost of purchase: "+cost+"\nEstimated Life: "+estimatedlife+" years"+"\nMethod of Depreciation: "+method);
		
		while (method.equalsIgnoreCase("straight line"))
		{
			
		}
		
		
		

	
	}
}
